---


interface NavItem {
  texto: string;
  link: string;
  icon: string;
}

const navItems: NavItem[] = [
  { texto: 'Home', link: '/', icon: '/home-2.svg' },
  { texto: 'Nosotros', link: '/nosotros', icon: '/info-hexagon-filled.svg#info' },
  { texto: 'Servicios', link: '/servicios', icon: '/inbox.svg#inbox' },
  { texto: 'Proyectos', link: '/proyectos', icon: '/inbox.svg#inbox' },
  { texto: 'Contaco', link: '/contacto', icon: '/inbox.svg#inbox' },

];
let currentUrl = new URL(Astro.request.url, Astro.site).pathname;
---
<nav class="flex justify-between items-center  uppercase border-t-2 border-b-2 border-[#7b47ff]">

  {navItems.map((item) => (
  <a  href={item.link} class={`flex flex-row justify-center text-2xl text-center text-white px-4 py-2 font-medium no-underline relative border-0 hover:bg-[#7b47ff] ${currentUrl === item.link ? 'active' : ''}`}>
  {item.texto}
</a>
  ))}


</nav>



<style>
  nav{
    clip-path: polygon(5% 1%, 100% 0, 100% 80%, 95% 100%, 0 100%, 0 20%);
    }
    .active {
      background-color: #7b47ff;
}

</style>