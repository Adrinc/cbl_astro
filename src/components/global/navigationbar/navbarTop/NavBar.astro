---
import BotonNav from './components/BotonNav.astro';



interface NavItem {
  texto: string;
  link: string;
  icon: string;
}

const navItems: NavItem[] = [
  { texto: 'Home', link: '/', icon: '/home-2.svg' },
  { texto: 'Nosotros', link: '/nosotros', icon: '/info-hexagon-filled.svg#info' },
  { texto: 'Servicios', link: '/servicios', icon: '/inbox.svg#inbox' },
  { texto: 'Proyectos', link: '/proyectos', icon: '/inbox.svg#inbox' },
  { texto: 'Contaco', link: '/contacto', icon: '/inbox.svg#inbox' },

];
---
<nav>

  {navItems.map((item) => (

    <BotonNav texto={item.texto} link={item.link} color='#FFFFFF' />
  ))}

</nav>



<style>
  nav{
    display : flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    gap: 50px;
    background-color: #b7232300;
   
   
  }
</style>