---
interface Props {
  title: string
  subtitle: string
  imageUrl: string
}

const { title, subtitle, imageUrl } = Astro.props;
---

<div class="tarjeta">
  <img src={imageUrl} alt="Imagen">
  <div class="text-content">
    <h1>{title}</h1>
    <p>{subtitle}</p>
  </div>
</div>
  
  <style>
  img {
    width: 25em;
    height: 100%;
    border-radius: 10px;
    object-fit: fill;
    max-height: 200px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    
  }
  .tarjeta{
    
    display: grid;
    grid-template-columns: 2fr 1fr;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 50%;
    border-width: 30px;
   border-style: none solid solid;
    border-color: #000000;
    background-image: linear-gradient(to bottom, black,#2d187457,#6031e263, #c2b0fa64); 
    padding: 1em;

    gap: 2em; 

  }
  .text-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
  }
  h1 {
    font-size: 2em;
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.5em;
    
  }
  p {
    font-size: 1.2em;
    font-weight: 300;
    color: #fff;
    margin-bottom: 0.5em;
  }
  .text-content h1, .text-content p {
  text-shadow: 2px 5px 2px rgba(0, 0, 0, 0.5); /* Agregado para a√±adir sombra al texto */
}

    </style>