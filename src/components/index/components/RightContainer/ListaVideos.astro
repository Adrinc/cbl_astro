---
interface Props {
  title: string
  subtitle: string
  imageUrl: string

}

const { title, subtitle, imageUrl,  } = Astro.props;
---

<div class="tarjeta" style={`background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.138),#050230,#271558, #000000aa), url(${imageUrl})`} >
  <img src={imageUrl} alt="Imagen">
  <div class="text-content">
      <h1 class="text-4xl font-semibold text-white mb-2">{title}</h1>
    <p class="text-lg font-light text-white mb-2">{subtitle}</p>
  </div>
</div>

  <style>
  img {
    width: 25em;
    height: 100%;
    border-radius: 10px;
    border-top: solid 1px #fff;
  
    object-fit: fill;
    max-height: 200px;
    box-shadow: 0 0 20px #00000080;
    transition: transform, max-height 0.5s ease;
  }
  .tarjeta{
    
    display: grid;
    grid-template-columns: 2fr 1fr;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 50%;
    border-radius: 10px;
    padding: 1em;
    gap: 2em; 
    margin-bottom: 20px;
    margin-right: 20px;
    background-repeat: no-repeat;
    background-size: cover;
    transition: transform, max-height, height 0.5s ease
  }

  .tarjeta:is(:hover, :focus-within) img{
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    max-height: 220px;
    transform: scale(1.02);
    transition: transform, max-height 0.5s ease;
	}
  .tarjeta:is(:hover, :focus-within) {

    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);

    cursor: pointer;
  
    transition: transform  0.5s ease;
	}
	.tarjeta:is(:hover, :focus-within) h1 {
		color: #fff2af;
	}


  .text-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
  }
  h1 {
    font-size: 2em;
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.5em;
    
  }
  p {
    font-size: 1.2em;
    font-weight: 300;
    color: #fff;
    margin-bottom: 0.5em;
  }
  .text-content h1, .text-content p {
  text-shadow: 2px 5px 2px rgba(0, 0, 0, 0.5); 
}

    </style>