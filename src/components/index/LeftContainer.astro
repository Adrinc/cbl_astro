---
interface Props {
  clipVideo: string;
}

let { clipVideo } = Astro.props;
---
<div class="leftsection">
  <video src={clipVideo} autoplay loop muted/>
</div>

<style>
video {
border-radius: 50%;
width: 700px;
height: 700px;
object-fit: fill;
background-color: black;
box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.75),   20px -10px 10px 10px rgba(255, 255, 255, 0.75); 
}


.leftsection {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

</style>


